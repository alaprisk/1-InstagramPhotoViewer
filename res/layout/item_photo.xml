<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#FFDEAD">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgProfilePic"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/imgPhoto"
        android:text=" "
        android:textSize="11sp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvLikes"        
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/caption_default_text"
        android:textSize="13sp" />
    
     <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgProfilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

     <TextView
         android:id="@+id/tvUser"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/imgProfilePic"
         android:layout_marginTop="15dp"
         android:textSize="15sp"
         android:text="@string/caption_default_text" />

     <TextView
         android:id="@+id/tvTimePassed"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:textSize="10sp"
         android:drawableLeft="@android:drawable/ic_menu_recent_history" 
         android:scaleHeight="40%"
    	 android:scaleWidth="40%"
         android:layout_marginTop="10dp"
         android:layout_marginRight="5dp"
         android:gravity="center"         
    	 android:alpha = "0.5"
    	 android:drawablePadding="1dp" />

     <TextView
         android:id="@+id/tvCommentsTag"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/tvCaption"
         android:textColor="#808080"
         android:layout_marginLeft="15dp"
         android:drawableLeft="@android:drawable/arrow_down_float"
         android:text="" 
         android:textSize="12sp"
         />

     <TextView
         android:id="@+id/tvComments"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/tvCommentsTag"
         android:text=""
         android:layout_marginLeft="15dp" 
         android:textSize="12sp"
         />

</RelativeLayout>
